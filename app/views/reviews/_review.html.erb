
<% if review.article_title %>
  <div class =  "border review-art">
  <div class="card review-art-card">
    <div class="card-body ">
    <a href= <%= review.article_link %> >
      <%= review.article_title %>
      </a>
    </div>
  </div>
<% end %> 

<div class="card-holder">
  <div class="row no-gutters">
    <div class="col-md-auto">
      <%# <img src="..." class="card-img" alt="..."> %>
      <%= image_tag avatar_url(review.user.email), class_name: "card-img", size: "64x64", alt: "User image" %>
    </div>
    <div class="col">

      <div class="card-body card-details">
        <div class="d-flex justify-content-between">
        <p class="card-title"><%=  review.user.username %> </p>
        <p class="text-muted card-time"> <%= get_time(@from_time, review.updated_at) %> </p>
        </div>
        <p class="card-text card-content"> <%= review.content %></p>
      </div>
    </div>
  </div>
</div>

<% if review.article_title %>
  </div>
<%end%>
