<div class="card-holder">
  <div class="row no-gutters">
    <div class="col-md-auto">
      <%# <img src="..." class="card-img" alt="..."> %>
      <%= image_tag 'Karthick.jpg' , class_name: "card-img", size: "80x80", alt: "User image" %>
    </div>
    <div class="col">
      <div class="card-body">
        <div class="d-flex justify-content-between">
        <h5 class="card-title font-weight-bold"><%=  review.user.username %> </h5>
        <p class="card-text"><p class="text-muted"> <%= get_time(@from_time, review.updated_at) %> </p>
        </div>
        <p class="card-text card-content"> <%= review.content %></p>
      </div>
    </div>
  </div>

</div>