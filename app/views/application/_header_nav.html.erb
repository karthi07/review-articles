  <header class="blog-header bg-color py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">

      <div class="col-8 text-center">
        <a class="blog-header-logo " href= <%= articles_path_url %> >Review Articles</a>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="text-muted" href="#" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
        </a>
        <% if user_signed_in? %>
          <strong class="allign-middle p-3 text-primary"> <a href=  <%= root_path %> > <%= current_user.username %> </a> </strong>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete ,class: "btn btn-outline-primary my-2 my-sm-0" %>
        <% else %>
          <%= link_to 'Sign in / Sign up', new_user_session_path ,class: "btn btn-outline-primary my-2 my-sm-0" %>
        <% end %>
        
        
      </div>
    </div>
  </header>